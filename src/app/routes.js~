angular.module('webmail')
    .config(function($routeProvider) {
	$routeProvider.when('/signup', {
	    templateUrl: 'views/signup.html'
		    })
	    .when('/login', {
		    controller: 'LoginController',
			templateUrl: 'views/login.html'
			})
	    .otherwise('/login');
	})			   
